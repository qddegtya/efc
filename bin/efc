#!/usr/bin/env node
const path = require('path')
const bootstrap = require('xaefc').bootstrap

bootstrap.hooks.listen('will-inject', async (next) => {
  console.log(`
  ███████╗███████╗ ██████╗
  ██╔════╝██╔════╝██╔════╝
  █████╗  █████╗  ██║     
  ██╔══╝  ██╔══╝  ██║     
  ███████╗██║     ╚██████╗
  ╚══════╝╚═╝      ╚═════╝     
  `)
  
  await next()
})

bootstrap({
  root: path.join(__dirname, '..', 'lib', 'commands'),
  version: require('../package.json').version
})
